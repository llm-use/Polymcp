# .env.example - Configuration Template
# Copy this to .env and fill with your values

# Authentication Mode
MCP_AUTH_ENABLED=true
MCP_AUTH_TYPE=api_key  # api_key, jwt, or both

# API Keys
MCP_API_KEY_ADMIN=your-admin-key-here
MCP_API_KEY_USER=your-user-key-here
MCP_API_KEY_POLYMCP=your-polymcp-key-here

# JWT Secret (generate with: openssl rand -base64 32)
MCP_SECRET_KEY=generate-a-secure-secret-key

# Server Settings
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MCP_REQUIRE_HTTPS=false

# Token Settings
MCP_ACCESS_TOKEN_EXPIRE=30  # minutes

# Development Settings
MCP_DEBUG=false
MCP_VERBOSE=false
